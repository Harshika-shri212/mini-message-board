<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1>Welcome to the Mini Messageboard</h1>
    <ul>
      <% messages.forEach((message, index) => { %>
        <li>
          <strong><%= message.user %></strong>: <%= message.text %> 
          <small>(<%= message.added.toLocaleString() %>)</small>
        </li>
      <% }); %>
    </ul>
    <a href="/new">Add a new message</a>
  </body>
</html>
